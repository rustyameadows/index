<h1>Notes</h1>

<div style="margin:0.75rem 0 1.25rem 0;">
  <%= link_to "New note", new_project_note_path(@project), class: "button", style: "display:inline-block; padding:0.55rem 0.9rem; background:#111; color:#fff; text-decoration:none; border-radius:6px;" %>
</div>

<% if @notes.any? %>
  <ul style="list-style:none; padding:0; margin:1rem 0;">
    <% @notes.each do |note| %>
      <li style="margin-bottom:0.75rem;">
        <div style="display:flex; justify-content:space-between; align-items:center;">
          <div>
            <%= link_to (note.title.presence || "Untitled"), project_note_path(@project, note), style: "font-weight:600; text-decoration:none;" %>
            <span style="color:#666; font-size:0.9rem;">Â· updated <%= time_ago_in_words(note.updated_at) %> ago</span>
          </div>
          <%= link_to "Edit", edit_project_note_path(@project, note), style: "text-decoration:none;" %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No notes yet.</p>
<% end %>
