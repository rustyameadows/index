<div style="display:flex; align-items:center; gap:0.75rem;">
  <h1 style="margin:0;">Your projects</h1>
  <%= link_to "New project", new_project_path, class: "button", style: "display:inline-block; padding:0.35rem 0.7rem; background:#111; color:#fff; text-decoration:none; border-radius:6px; font-size:0.95rem;" %>
</div>

<% if @projects.any? %>
  <ul style="list-style:none; padding:0; margin: 1rem 0;">
    <% @projects.each do |project| %>
      <li style="margin-bottom:0.5rem;">
        <%= link_to project.title, project_path(project), style: "font-weight:600; text-decoration:none;" %>
        <% if project.description.present? %>
          <div style="color:#555;"><%= project.description %></div>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You havenâ€™t created any projects yet.</p>
<% end %>
